<head>
  <title>Contribution #<%= @contribution.id %></title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/contributions.css">
</head>
<body>
  <h1 class="text-center my-4"><%= @contribution.name %></h1>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Details</h5>
        <div class="mb-3">
          <strong>Symbol:</strong> <%= @contribution.ticker_symbol %>
        </div>
        <div class="mb-3">
          <strong>Category:</strong> <%= @contribution.category %>
        </div>
        <div class="mb-3">
          <strong>Description:</strong>
          <p><%= @contribution.description %></p>
        </div>
        <div class="mb-3">
          <strong>Current Price:</strong> $<%= @contribution.current_price %>
        </div>
        <div class="mb-3">
          <strong>Average Return:</strong> <%= @contribution.average_return %>%
        </div>
        <%= link_to 'Back to Contributions', contributions_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</body>
