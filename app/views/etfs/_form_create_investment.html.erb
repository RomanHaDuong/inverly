<h1>Create investment form partial start</h1>
<%= simple_form_for [@etf, @investment], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' } %>
  </div>

<div class="form-group">
  <%= f.input :risk_level, collection: [['Low', 'low'], ['Medium', 'medium'], ['High', 'high']], input_html: { class: 'form-control' } %>
</div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
<h1>Create investment form partial end</h1>
