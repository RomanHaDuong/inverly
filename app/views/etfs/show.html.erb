<h1 class="text-center my-4"><%= @etf.name %></h1>
<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Details</h5>
      <div class="mb-3">
        <strong>Symbol:</strong> <%= @etf.ticker_symbol %>
      </div>
      <div class="mb-3">
        <strong>Category:</strong> <%= @etf.category %>
      </div>
      <div class="mb-3">
        <strong>Description:</strong>
        <p><%= @etf.description %></p>
      </div>
      <div class="mb-3">
        <strong>Current Price:</strong> $<%= @etf.current_price %>
      </div>
      <div class="mb-3">
        <strong>Average Return:</strong> <%= @etf.average_return %>%
      </div>
      <%= link_to 'Back to ETFs', etfs_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <h2 class="mt-4">Make an investment on this ETF</h2>
  <%= render 'form_create_investment' %>
</div>
