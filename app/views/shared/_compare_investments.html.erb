<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    padding: 20px;
    margin: 0;
  }

  .container {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }

  .compare-table {
    width: 100%;
    max-width: 1200px;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border: 1px solid #ddd;
  }

  .compare-table th, .compare-table td {
    padding: 16px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .compare-table th {
    background-color: #3498db;
    color: white;
    font-weight: bold;
  }

  .compare-table td {
    background-color: #f9f9f9;
  }

  .spec-header {
    text-align: center;
    background-color: #3498db;
    color: white;
    font-weight: bold;
  }

  .investment-column {
    padding: 20px;
    border: 1px solid #ccc;
    background-color: #ffffff;
    border-radius: 8px;
  }

  .investment-column h3 {
    background-color: #3498db;
    color: white;
    padding: 10px;
    margin: 0;
    border-radius: 8px 8px 0 0;
    font-size: 18px;
  }

  .investment-column ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .investment-column li {
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
    font-size: 14px;
  }

  .investment-column li:last-child {
    border-bottom: none;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .compare-table {
      font-size: 14px;
    }

    .investment-column {
      width: 100%;
      padding: 15px;
    }

    .compare-table th, .compare-table td {
      padding: 10px;
    }
  }

  @media (max-width: 480px) {
    .compare-table {
      font-size: 12px;
    }
  }
</style>
  <% investments = @investments.where(compared: true) %>

  <% if investments.count >= 2 %>
    <div style="text-align: center; padding: 20px;">
      <span class="title">Compare up to 4 investments</span>
    </div>
  <% end %>

  <% investments = @investments.where(compared: true) %>

<% if investments.count >= 2 %>
  <% @investment_1 = investments[0] %>
  <% @investment_2 = investments[1] %>
<% end %>

<% if investments.count >= 3 %>
  <% @investment_3 = investments[2] %>
<% end %>

<% if investments.count >= 4 %>
  <% @investment_4 = investments[3] %>
<% end %>

<% sorted_investments = investments.sort_by { |investment| investment.etf.average_return }.reverse %>


<% if sorted_investments.count >= 2 %>
  <div class="container">
    <table class="compare-table">
      <thead>
        <tr>
          <% sorted_investments.each_with_index do |investment, index| %>
            <th class="spec-header">Investment <%= index + 1 %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% sorted_investments.each do |investment| %>
            <td>
              <h3><%= investment.name %></h3>
              <ul>
                <li><strong>Name:</strong> <%= investment.name %></li>
                <li><strong>Price:</strong> <%= investment.etf.category %></li>
                <li><strong>Annual Yield:</strong> <%= "#{(investment.etf.average_return) * 100}%" %></li>
                <li><strong>Risk Level:</strong> <%= investment.risk_level %></li>
                <!-- Add more specifications as needed -->
              </ul>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
