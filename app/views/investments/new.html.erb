<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="d-flex justify-content-center">New Investment</h1>
      <%= simple_form_for [@etf, @investment], html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group" style="">
          <%= f.input :name, label: "Name (Optional):", placeholder: "Enter a custom investment name...", input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group" style="">
          <%= f.input :description, label: "Description (Optional):" ,placeholder: "Enter a description for this investment...", input_html: { class: 'form-control' } %>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Create a New Investment", class: 'simulate-now-button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
