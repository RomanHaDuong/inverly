<div style="text-align: center; padding: 20px;">
  <span class="title">Your Investments</span>
</div>
<div style="text-align: center; padding: 20px;">
  <%= link_to "Add Investment", etfs_path, class: "btn btn-primary" %>
</div>
<ul class="list-group mx-5">
  <% @investments.each do |investment| %>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to investment.name, investment_path(investment), class: "text-decoration-none" %>
      <div class="input-group">
        <%= link_to 'Edit', investment_path(investment), method: :patch, class: 'btn btn-primary btn-sm mx-1' %>
        <%= link_to 'Delete', investment_path(investment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this investment?"}, class: 'btn btn-danger btn-sm text-white' %>
      </div>
    </div>
  <% end %>
  <br>
</ul>
