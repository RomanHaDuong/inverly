<div style="text-align: center; padding: 20px;">
  <span class="title">Your Investments</span>
</div>
<div style="text-align: center; padding: 20px;">
  <%= link_to "Add a New Investment", etfs_path, class: "simulate-now-button btn-lg" %>
</div>
<ul class="list-group mx-5">
  <% @investments.each do |investment| %>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to investment.name, investment_path(investment), class: "text-decoration-none" %>
      <div class="input-group d-flex justify-content-end">
        <div class="edit-button">
          <%= link_to 'Edit', investment_path(investment), method: :patch, class: 'simulate-now-button btn-sm mx-1' %>
        </div>
        <div class="delete-button">
          <%= link_to 'Delete', investment_path(investment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this investment?"}, class: 'simulate-now-button btn-sm text-white', style: 'background-color: red;' %>
        </div>
      </div>
    </div>
  <% end %>
  <br>
</ul>
