<div class="container row d-flex justify-content-center" style="background-color: #2596be; border-radius: 10px;">
  <h1 class="text-center text-white my-4"><%= "#{@investment.name} | #{@investment.etf.name}" %></h1>
</div>

<div>
  <% if @investment.contributions.last.nil? %>
      <%= render 'form_create_contribution' %>
  <% else %>
    <%= render 'investment_info' %>
    <div class="d-flex justify-content-between">
      <%= render 'form_create_contribution' %>
      <%= render 'display_investment_details' %>
    </div>
    <%= render 'shared/render_holdings' %>
  <% end %>
</div>

<style>
  .edit-button .btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    color: #ffffff;
    background-color: #007bff; /* Bootstrap primary color */
    border: none;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .edit-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%; /* Optional: Adjust as needed */
  }

  .edit-button .btn:hover {
    background-color: #0056b3; /* Darker shade of blue */
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    text-decoration: none;
  }

  .edit-button .btn:active {
    background-color: #004080;
    box-shadow: inset 0px 4px 6px rgba(0, 0, 0, 0.3);
  }

  .edit-button .interactive-brokers-link {
    margin: 10px 0;
  }
</style>
